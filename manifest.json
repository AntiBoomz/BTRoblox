{
	"manifest_version": 2,

	"name": "BTRoblox - Making Roblox Better",
	"short_name": "BTRoblox",
	"description": "Enhance your Roblox experience!",
	"version": "2.10.1",
	"author": "AntiBoomz",
	"minimum_chrome_version": "69",
	"incognito": "split",

	"icons": {
		"128":"res/icon_128.png"
	},

	"background": {
		"persistent": false,
		"scripts": [
			"js/common.js",
			"js/background/blogfeed.js",
			"js/background/groupshout.js",
			"js/background/contextmenu.js",
			"js/background/fetch.js"
		]
	},

	"permissions": [
		"*://*.roblox.com/",
		"*://*.rbxcdn.com/",
		"alarms",
		"contextMenus",
		"notifications",
		"storage"
	],

	"web_accessible_resources": [
		"js/inject.js",
		"lib/*",
		"css/*",
		"res/*"
	],

	"content_scripts": [
		{
			"matches": ["*://www.roblox.com/*", "*://web.roblox.com/*"],
			"js": [
				"js/common.js",
				"js/utility.js",
				"js/inject.js",
				"js/main.js",
				
				"js/feat/btr-settings.js",
				"js/feat/fastSearch.js",
				"js/feat/navigation.js",
				
				"lib/three.min.js",
				"js/rbx/Parser.js",
				"js/rbx/AssetCache.js",
				"js/rbx/Avatar/Animator.js",
				"js/rbx/Avatar/AvatarRigs.js",
				"js/rbx/Avatar/Composites.js",
				"js/rbx/Avatar/Avatar.js",
				"js/rbx/Avatar/Appearance.js",
				"js/rbx/Scene.js",
				"js/rbx/Preview.js",

				"js/rbx/ApiDump.js",
				"js/rbx/Explorer.js",

				"js/pages.js",
				"js/pages/avatar.js",
				"js/pages/catalog.js",
				"js/pages/develop.js",
				"js/pages/friends.js",
				"js/pages/gamedetails.js",
				"js/pages/groups.js",
				"js/pages/home.js",
				"js/pages/inventory.js",
				"js/pages/itemdetails.js",
				"js/pages/messages.js",
				"js/pages/money.js",
				"js/pages/placeconfig.js",
				"js/pages/profile.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}