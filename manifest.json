{
	"manifest_version": 2,

	"name": "BTRoblox - Making Roblox Better",
	"short_name": "BTRoblox",
	"description": "Enhance your Roblox experience!",
	"version": "2.13.2",
	"author": "AntiBoomz",

	"browser_action": {
		"default_title": "Open BTRoblox Settings"
	},

	"icons": {
		"128":"res/icon_128.png"
	},

	"applications": {
		"gecko": {
			"id": "btroblox@antiboomz.com"
		}
	},

	"background": {
		"scripts": [
			"js/common.js",
			"js/background/blogfeed.js",
			"js/background/groupshout.js",
			"js/background/contextmenu.js",
			"js/background/browseraction.js",
			"js/background/fetch.js"
		]
	},

	"permissions": [
		"*://*.roblox.com/",
		"*://*.rbxcdn.com/",
		"clipboardWrite",
		"contextMenus",
		"notifications",
		"storage"
	],

	"web_accessible_resources": [
		"sourceviewer.html",
		"js/inject.js",
		"lib/*",
		"css/*",
		"res/*"
	],

	"content_scripts": [
		{
			"matches": ["*://www.roblox.com/*", "*://web.roblox.com/*"],
			"js": [
				"js/common.js",
				"js/utility.js",
				"js/inject.js",
				"js/main.js",
				
				"js/feat/fastSearch.js",
				"js/feat/navigation.js",
				
				"js/rbx/Parser.js",
				"js/rbx/AssetCache.js",

				"js/pages/common_pages.js",
				"js/pages/avatar.js",
				"js/pages/catalog.js",
				"js/pages/develop.js",
				"js/pages/friends.js",
				"js/pages/gamedetails.js",
				"js/pages/groups.js",
				"js/pages/home.js",
				"js/pages/inventory.js",
				"js/pages/itemdetails.js",
				"js/pages/messages.js",
				"js/pages/money.js",
				"js/pages/placeconfig.js",
				"js/pages/profile.js",
				
				"js/final.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}